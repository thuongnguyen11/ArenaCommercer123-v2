<div class="accessories">
  {% if section.settings['bg-accessories'] == blank %}
    <img
      src="https://cdn.shopify.com/s/files/1/0744/2530/3338/files/Group_14.png?v=1681271755"
      class="bg-accessories"
    >
  {% else %}
    <img
      src="{{section.settings['bg-accessories'] | image_url}}"
      class="bg-accessories"
    >
  {% endif %}

  <div class="content-accessories">
    <h1 class="title-accessories">{{ section.settings['title-accessories'] }}</h1>
    <div class="discover-more">
      <a href="{{section.settings.link-discover-more | default: '#'}}">{{ section.settings['discover-more'] }}</a>
    </div>
  </div>
</div>

<style>
  .accessories {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin: 0 40px;
  }
  .bg-accessories {
    width: 100%;
    height: 250px;
    border-radius: 4px;
    object-fit: cover;
  }
  .content-accessories {
    position: absolute;
    color: #fff;
    top: 30%;
    left: 0;
    padding-left: 50px;
    line-height: 55px;
  }
  .title-accessories {
    font-size: 50px;
    font-weight: 500;
    padding-bottom: 30px;
    letter-spacing: 0em;
  }
  .discover-more {
    font-size: 18px;
    font-weight: 400;
    line-height: 29px;
    letter-spacing: 0em;
    text-decoration: underline;
    cursor: pointer;
  }
  @media (max-width: 1280px) {
    .bg-accessories {
      height: 230px;
    }
    .title-accessories {
      font-size: 40px;
      font-weight: 500;
    }
  }
  @media (max-width: 1024px) {
    .bg-accessories {
      height: 200px;
    }
    .title-accessories {
      font-size: 35px;
      font-weight: 500;
      padding-bottom: 5px;
    }
  }
  @media (max-width: 768px) {
    .accessories {
      margin: 0 16px;
    }
    .bg-accessories {
      height: 150px;
    }
    .content-accessories {
      top: 42px;
      left: 0;
      padding-left: 20px;
    }
    .title-accessories {
      font-size: 24px;
      font-weight: 500;
      padding-bottom: 0;
    }
    .discover-more {
      font-size: 14x;
      font-weight: 400;
      line-height: 22.4px;
    }
  }
</style>

{% schema %}
{
  "name": "accessories",
  "tag": "section",
  "settings": [
    {
      "id": "title-accessories",
      "type": "text",
      "label": "Title",
      "default": "Luxurious Accessories "
    },
    {
      "id": "discover-more",
      "type": "text",
      "label": "Edit text Discover more",
      "default": "Discover more"
    },
    {
      "id": "link-discover-more",
      "type": "url",
      "label": "Add link"
    },
    {
      "id": "bg-accessories",
      "type": "image_picker",
      "label": "Background accessories"
    }
  ],
  "presets": [
    {
      "name": "accessories"
    }
  ]
}
{% endschema %}

